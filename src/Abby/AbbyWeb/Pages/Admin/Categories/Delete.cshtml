@page
@model AbbyWeb.Pages.Admin.Categories.DeleteModel

<form method="post">
	<input type="hidden" asp-for="@Model.Category.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="@Model.Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control" disabled />
			<span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control" disabled />
			<span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
		<a asp-page="Index" class="btn btn-secondary" style="width: 200px">Back to List</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
